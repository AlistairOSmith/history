{
  "name": "custom-icon-badges",
  "version": "0.1.0",
  "description": "Allows users to more easily use their own icons and logos in shields.io badges",
  "author": "Jonah Lawrence",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "concurrently": "^6.2.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "monk": "^7.3.4",
    "typescript": "^4.3.5",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "babel-eslint": "9.x",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4"
  },
  "type": "module",
  "scripts": {
    "install-client": "cd client && yarn",
    "build": "tsc && cd client && yarn build",
    "heroku-postbuild": "yarn install-client && yarn build",
    "dev": "yarn lint && yarn build && yarn start",
    "start": "concurrently --kill-others-on-fail \"yarn start-server\" \"yarn start-client\"",
    "start-server": "NODE_OPTIONS='--experimental-specifier-resolution=node --require dotenv/config' node dist/index.js",
    "start-client": "cd client && yarn start",
    "test": "yarn test-server && yarn test-client",
    "test-server": "jest",
    "test-client": "cd client && yarn test",
    "lint": "yarn lint-server && yarn lint-client",
    "lint-server": "yarn eslint . --ext .ts,.tsx --fix",
    "lint-client": "cd client && yarn lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DenverCoder1/custom-icon-badges.git"
  },
  "bugs": {
    "url": "https://github.com/DenverCoder1/custom-icon-badges/issues"
  }
}
